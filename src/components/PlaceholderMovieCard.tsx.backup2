                  {[1, 2, 3].map((i) => (
                    <span
                      key={i}
                      className="px-2 md:px-3 py-1 md:py-1.5 bg-white/10 text-xs md:text-sm text-gray-300 rounded-full border border-white/10"
                    >
                      Genre {i}
                    </span>
                  ))}
                </div>
              </div>
              
              {/* Overview placeholder */}
              <div className="mb-4 md:mb-6 flex-1">
                <div className="space-y-2">
                  <div className="h-4 bg-gray-700/50 rounded w-full" />
                  <div className="h-4 bg-gray-700/50 rounded w-5/6" />
                  <div className="h-4 bg-gray-700/50 rounded w-4/6" />
                </div>
              </div>
              
              {/* Action Buttons - Match MovieCard layout */}
              <div className="flex flex-col sm:flex-row gap-2 md:gap-3 mt-auto">
                <Button
                  variant="primary"
                  disabled
                  className="bg-gray-800/50 hover:bg-gray-800/50 cursor-not-allowed flex-1 text-gray-400 border border-gray-700"
                >
                  View on IMDb
                </Button>
                <Button
                  variant="secondary"
                  disabled
                  className="bg-gray-800/50 hover:bg-gray-800/50 cursor-not-allowed flex-1 text-gray-400 border border-gray-700"
                >
                  Add to Watchlist
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default PlaceholderMovieCard;
